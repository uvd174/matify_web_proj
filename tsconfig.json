{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "module": "es2020",
    "target": "es2020",
    "outDir": "out",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },

  "include": ["src"],
}
